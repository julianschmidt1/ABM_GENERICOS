#include <stdio.h>
#include <stdlib.h>

typedef struct {
	int day;
	int month;
	int year;
} eBirth;

typedef struct {
	char firstName[20];
	char lastName[20];
	int age;
	char sex;
	eBirth birthDate;
} ePersona;

int createNewUser(ePersona *persona);

int main(void) {
	setbuf(stdout, NULL);

	ePersona miPersona;

	createNewUser(&miPersona);

	printf("%s%s", miPersona.firstName, miPersona.lastName);

	return EXIT_SUCCESS;
}

int createNewUser(ePersona *persona) {

	printf("Ingrese nombre: ");
	fgets(persona->firstName, sizeof(persona->firstName), stdin);
	fflush(stdin);
	printf("Ingrese apellido: ");
	fgets(persona->lastName, sizeof(persona->lastName), stdin);
	fflush(stdin);

	return 0;
}
