#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
	int day;
	int month;
	int year;
} eBirth;

typedef struct {
	char firstName[20];
	char lastName[20];
	int age;
	char sex;
	eBirth birthDate;
} ePersona;

ePersona createNewUser(ePersona persona);

int main(void) {
	setbuf(stdout, NULL);

	ePersona miPersona;

	miPersona = createNewUser(miPersona);

	printf("%s %s", miPersona.firstName, miPersona.lastName);

	return EXIT_SUCCESS;
}

ePersona createNewUser(ePersona persona) {
	char buffer[4096];

	printf("Ingrese nombre: ");
	fgets(persona.firstName, strlen(buffer) - 1, stdin);
	fflush(stdin);
	printf("Ingrese apellido: ");
	fgets(persona.lastName, strlen(buffer), stdin);
	fflush(stdin);

	return persona;
}
