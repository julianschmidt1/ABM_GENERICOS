#include <stdio.h>
#include <stdlib.h>
#include "Input.h"

typedef struct {
	int day;
	int month;
	int year;
} eBirth;

typedef struct {
	char firstName[20];
	char lastName[20];
	int age;
	char sex;
	eBirth birthDate;
} ePersona;

int createNewUser(ePersona *persona);

int main(void) {
	setbuf(stdout, NULL);

	ePersona miPersona;

	createNewUser(&miPersona);

	printf("%s %s", miPersona.firstName, miPersona.lastName);

	return EXIT_SUCCESS;
}

int createNewUser(ePersona *persona) {

	input_getStringletters("Ingrese el nombre: ", 9999, "Nombre invalido",
			persona->firstName, sizeof(persona->firstName));
	input_getStringletters("Ingrese el apellido: ", 9999, "apellido invalido",
			persona->lastName, sizeof(persona->lastName));

	return 0;
}
